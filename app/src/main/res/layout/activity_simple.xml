<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".SimpleActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:text="CHECKING"
        android:paddingLeft="20dp"
        android:background="#EBEBEB"
        android:gravity="center_vertical"
        android:id="@+id/CHECKING_TEXT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bcd"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/checking_name"
        app:layout_constraintTop_toBottomOf="@id/CHECKING_TEXT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$                       00"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:id="@+id/checking_cents"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checking_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="40dp"
        android:text="5,000"
        android:textSize="45dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CHECKING_TEXT"
        android:id="@+id/checking_dollars"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="available now"
        app:layout_constraintTop_toBottomOf="@+id/checking_dollars"
        app:layout_constraintLeft_toLeftOf="@id/checking_cents"
        android:textColor="#777575"
        android:id="@+id/checking_available_now"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:src="@drawable/chevron_right"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/checking_cents"
        app:layout_constraintBottom_toBottomOf="@id/checking_cents"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:text="SAVINGS"
        android:paddingLeft="20dp"
        android:background="#EBEBEB"
        android:gravity="center_vertical"
        android:id="@+id/SAVINGS_TEXT"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/checking_available_now"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nick"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/saving_name"
        app:layout_constraintTop_toBottomOf="@id/SAVINGS_TEXT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$                      50"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:id="@+id/saving_cents"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saving_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="40dp"
        android:text="4,064"
        android:textSize="45dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SAVINGS_TEXT"
        android:id="@+id/saving_dollars"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="available now"
        app:layout_constraintTop_toBottomOf="@+id/saving_dollars"
        app:layout_constraintLeft_toLeftOf="@id/saving_cents"
        android:textColor="#777575"
        android:id="@+id/saving_available_now"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:src="@drawable/chevron_right"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/saving_cents"
        app:layout_constraintBottom_toBottomOf="@id/saving_cents"
        android:layout_marginRight="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>